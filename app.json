{
  "expo": {
    "name": "NutriMind",
    "slug": "nutrimind",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.anonymous.nutrimind"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "android.permission.CAMERA"
      ],
      "package": "com.anonymous.nutrimind"
    },
    "experiments": {
      "newArchEnabled": true
    },
    "plugins": [
      [
        "expo-sensors",
        {
          "motionPermission": "Allow NutriMind to access your device motion and pedometer."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#006A6A",
          "sounds": [
            "./assets/notification-sound.wav"
          ]
        }
      ],
      "expo-barcode-scanner"
    ]
  }
}
